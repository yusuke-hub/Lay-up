<div class="container">
 <% if @user.id == current_user.id %>
	<h3>あなたの避難計画</h3>
 <% else %>
  <h3><%= @user.name %>さんの避難計画</h3>
 <% end %>
	<table class="table table-bordered">
		<tr>
			<th>日付(<span style="border-bottom: solid 1px #eb6100;">ここからコメント</span>)</th>
			<th>出発地</th>
			<th>避難先</th>
			<th>距離(M)</th>
			<th>時間(分)</th>
			<th></th>
		</tr>
		<% @plans.each do |plan| %>
		<tr>
			<td>
				<%= link_to plan_detail_path(plan.id) do %>
					<%= plan.created_at.strftime('%Y/%m/%d')  %>
				<% end %>
			</td>
			<td><%= plan.departure %></td>
			<td><%= plan.shelter %></td>
			<td><%= plan.distance %></td>
			<td><%= plan.duration/60 %></td>
			<td>
				<%= link_to "削除", plan_path(plan.id), method: :delete, class:'btn btn-sm btn-danger', method: :delete %>
			</td>
		</tr>
		<% end %>
	</table>
	<%= paginate @plans %>
	<%= page_entries_info @plans %>
</div>
