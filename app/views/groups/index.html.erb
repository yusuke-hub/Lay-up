<div class="container">
    <div class="row">
        <h4>マイグループ</h4>
        <table class="table table-bordered">
            <tr>
                <th>グループ名</th>
                <th>メモ</th>
            </tr>
            <% @groups.each do |groups| %>
            <tr>
                <td>
                    <%= link_to group_path(groups.id) do %>
                      <%= groups.name %>
                    <% end %>
                </td>
                <td>
                    <%= groups.caption %>
                </td>
                <% end %>
            </tr>
        </table>
        <%= link_to "グループを作成する", new_group_path, class:'btn btn-md btn-success' %>
    </div>
</div>