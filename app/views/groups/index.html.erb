<div class="container">
    <div class="row">
        <h4>マイグループ</h4>
        <table class="table table-bordered">
            <tr>
                <th>作成日</th>
                <th>グループ名</th>
                <th> 紹介</th>
                <th>人数</th>
                <th></th>
            </tr>
            <% @belongings.each do |belonging| %>
            <tr>
                <td>
                    <%= link_to group_path(belonging.group.id) do %>
                        <%= belonging.group.created_at.strftime('%Y/%m/%d') %>
                    <% end %>                
                </td>
                <td>
                      <%= belonging.group.name %>
                </td>
                <td>
                    <%= belonging.group.caption %>
                </td>
                <td>
                    <%= Belonging.where(activation: true).count %>
                </td>
                <td>
                    <%= link_to "編集", edit_group_path(belonging.group), class:'btn btn-sm btn-success mr-3' %>
                    <%= link_to "削除", group_path(belonging.group), class:'btn btn-sm btn-danger', method: :delete %>
                </td>
                <% end %>
            </tr>
        </table>
        <%= link_to "グループを作成する", new_group_path, class:'btn btn-md btn-warning text-muted' %>
    </div>
</div>